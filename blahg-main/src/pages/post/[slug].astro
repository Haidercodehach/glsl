export async function getStaticPaths() {
	let posts = await Astro.glob(`../../posts/*.md`);

	return posts.map((post) => {
		return {
			params: { slug: post.frontmatter.slug },
			props: { post: post },
		};
	});
}

const { post } = Astro.props;
const { Content } = post;
